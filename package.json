{
  "name": "nojvek.com",
  "version": "1.0.0",
  "private": true,
  "author": "nojvek",
  "homepage": "http://nojvek.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nojvek/nojvek.com.git"
  },
  "scripts": {
    "build-pug": "yarn pug --pretty --out public src",
    "build-styl": "yarn stylus --inline --out public src",
    "build-resume-pdf": "md-to-pdf src/assets/resume.md --config-file src/md_to_pdf.config.js && mv src/assets/resume.pdf public/resume.pdf",
    "clean": "rm -rf public",
    "copy-assets": "mkdir public && cp src/assets/* public",
    "build": "yarn clean && yarn copy-assets && yarn build-pug && yarn build-styl && yarn build-resume-pdf",
    "server": "(cd public && yarn http-server -s -c0 -p 8081)",
    "start": "yarn build && yarn server",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "dependencies": {},
  "devDependencies": {
    "http-server": "^0.11.1",
    "md-to-pdf": "^5.2.4",
    "prettier": "^3.2.5",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5"
  }
}
