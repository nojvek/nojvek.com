// theme colors
$gray = #ccc
$dark-gray = #444

body
	font-size 16px
	font-family 'Open Sans', Arial, sans-serif
	padding 0
	margin 0
	-webkit-font-smoothing  antialiased
	color $dark-gray

h1
	font-weight 300
	font-size 8em

h2
	margin-top 1em
	font-weight 300
	font-size 4em
	

p
	line-height 1.5em
	margin-bottom 1em
	
a:visited
	color inherit
	
a:hover
	text-decoration: none
	border-bottom: 1px solid #aaa

	
//.nav
.intro
	font-family 'Lato', Arial, sans-serif

	.bg
		width 100%
		height 700px
		background-position center center
		background-repeat no-repeat
		background-size cover
		opacity 0.6
		
	.profile
		padding 50px
		position absolute
		top 70px
		width 100%
		
		.profile-pic
			width 80px
			height 80px
			background-size cover
			left calc(50% - 40px)
			position relative
			border 2px solid #444
			border-radius 100px
			opacity 0.8

			
		
		.iam
			text-align center
			font-size 2em
			margin-top 50px
			 
		h1.name
			text-align center
			word-spacing 50px
			text-transform capitalize
			
		.blurb
			margin-top 70px
			text-align center
			font-size 2.3em
			word-spacing 10px

.experiences
	.experience
		margin-top 2em
		font-size 20px
		
		.info
				
			.logo
				width 200px
				height 80px
				background-size contain
				background-repeat no-repeat
				background-position right center
				float right
				margin-right 15px
			
			.company 
				font-size 2em
				color inherit
				font-weight 300

		
		.project
			margin-top 2em
			padding-bottom 1em
			border-bottom 1px solid $gray
			
			.video
				iframe
					width 100%
					height 315px
					border 0
					margin-bottom 1em
				
			.desc
				text-align justify
				padding-left 2em
	

